# BMCWEB_HTTP2
option(
    'http2',
    type: 'feature',
    value: 'enabled',
    description: 'Enable HTTP/2 protocol support using nghttp2.',
)

# BMCWEB_WATCHDOG_TIMEOUT
option(
    'watchdog-timeout-seconds',
