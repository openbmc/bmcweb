{
    "$id": "http://redfish.dmtf.org/schemas/v1/LockService.v1_0_0.json",
    "$ref": "#/definitions/LockService",
    "$schema": "http://redfish.dmtf.org/schemas/v1/redfish-schema-v1.json",
    "copyright": "Copyright 2014-2019 DMTF. For the full DMTF copyright policy, see http://www.dmtf.org/about/policies/copyright",
    "definitions": {
        "AcquireLock": {
            "additionalProperties": false,
            "description": "This action acquires a management console lock.",
            "longDescription": "This action shall acquire a single/multiple management console lock(s) on a specified hypervisor resource",
            "parameters": {
                "Request": {
                    "description": "This paramter shall contain the lock request",
                    "items": {
                        "$ref": "#/definitions/LockRecord"
                    },
                    "longDescription": "This parameter shall contain a single/multiple lock request(s)",
                    "type": "array"
                }
            },
            "patternProperties": {
                "^([a-zA-Z_][a-zA-Z0-9_]*)?@(odata|Redfish|Message)\\.[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "description": "This property shall specify a valid odata or Redfish property.",
                    "type": [
                        "array",
                        "boolean",
                        "integer",
                        "number",
                        "null",
                        "object",
                        "string"
                    ]
                }
            },
            "properties": {
                "target": {
                    "description": "Link to invoke action",
                    "format": "uri-reference",
                    "type": "string"
                },
                "title": {
                    "description": "Friendly action name",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Actions": {
            "additionalProperties": false,
            "description": "The available actions for this resource.",
            "longDescription": "This type shall contain the available actions for this resource.",
            "patternProperties": {
                "^([a-zA-Z_][a-zA-Z0-9_]*)?@(odata|Redfish|Message)\\.[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "description": "This property shall specify a valid odata or Redfish property.",
                    "type": [
                        "array",
                        "boolean",
                        "integer",
                        "number",
                        "null",
                        "object",
                        "string"
                    ]
                }
            },
            "properties": {
                "#LockService.AcquireLock": {
                    "$ref": "#/definitions/AcquireLock"
                },
                "#LockService.GetLockList": {
                    "$ref": "#/definitions/GetLockList"
                },
                "#LockService.ReleaseLock": {
                    "$ref": "#/definitions/ReleaseLock"
                },
                "Oem": {
                    "$ref": "#/definitions/OemActions",
                    "description": "The available OEM-specific actions for this resource.",
                    "longDescription": "This property shall contain the available OEM-specific actions for this resource."
                }
            },
            "type": "object"
        },
        "GetLockList": {
            "additionalProperties": false,
            "description": "This action gets the whole lock table from the bmcweb memory",
            "longDescription": "This action shall return the whole lock table from the bmcweb.",
            "parameters": {
                "SessionIDs": {
                    "description": "This parameter holds the session ID's from the input",
                    "items": {
                        "type": "string"
                    },
                    "longDescription": "This parameter shall contain all the Session ID's in the form of a list",
                    "pattern": "^[a-zA-Z0-9]*$",
                    "type": "array"
                }
            },
            "patternProperties": {
                "^([a-zA-Z_][a-zA-Z0-9_]*)?@(odata|Redfish|Message)\\.[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "description": "This property shall specify a valid odata or Redfish property.",
                    "type": [
                        "array",
                        "boolean",
                        "integer",
                        "number",
                        "null",
                        "object",
                        "string"
                    ]
                }
            },
            "properties": {
                "target": {
                    "description": "Link to invoke action",
                    "format": "uri-reference",
                    "type": "string"
                },
                "title": {
                    "description": "Friendly action name",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "LockRecord": {
            "additionalProperties": false,
            "description": "The type shall indicate a single lock record",
            "longDescription": "This type shall contain the a single management console lock record",
            "patternProperties": {
                "^([a-zA-Z_][a-zA-Z0-9_]*)?@(odata|Redfish|Message)\\.[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "description": "This property shall specify a valid odata or Redfish property.",
                    "type": [
                        "array",
                        "boolean",
                        "integer",
                        "number",
                        "null",
                        "object",
                        "string"
                    ]
                }
            },
            "properties": {
                "LockType": {
                    "description": "The property indicates the lock type.",
                    "longDescription": "This property shall contain the management console lock type. It can be either Read lock or Write Lock.",
                    "pattern": "^(Read|Write) ",
                    "type": "string"
                },
                "ResourceID": {
                    "description": "The property holds the management console resource ID.",
                    "longDescription": "This property shall contain the (uint64_t) resource ID, This is only understandable by HMC",
                    "maximum": 18446744073709551615,
                    "minimum": 0,
                    "type": "integer"
                },
                "SegmentFlags": {
                    "$ref": "http://redfish.dmtf.org/Schemas/v1/SegmentFlags.v1_0_0.json#/definitions/SegmentFlags",
                    "description": "This property contains the segment flags.",
                    "longDescription": "This property shall contain the segment Flags. This helps in interpretting the Resource ID",
                    "readonly": true
                }
            },
            "required": [
                "LockType",
                "SegmentFlags",
                "ResourceID"
            ],
            "type": "object"
        },
        "LockService": {
            "additionalProperties": false,
            "description": "The LockService schema contains actions for handling the management console lock requests",
            "longDescription": "This resource contains the Oem LockService Redfish implementation.",
            "patternProperties": {
                "^([a-zA-Z_][a-zA-Z0-9_]*)?@(odata|Redfish|Message)\\.[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "description": "This property shall specify a valid odata or Redfish property.",
                    "type": [
                        "array",
                        "boolean",
                        "integer",
                        "number",
                        "null",
                        "object",
                        "string"
                    ]
                }
            },
            "properties": {
                "@odata.context": {
                    "$ref": "http://redfish.dmtf.org/schemas/v1/odata-v4.json#/definitions/context"
                },
                "@odata.etag": {
                    "$ref": "http://redfish.dmtf.org/schemas/v1/odata-v4.json#/definitions/etag"
                },
                "@odata.id": {
                    "$ref": "http://redfish.dmtf.org/schemas/v1/odata-v4.json#/definitions/id"
                },
                "@odata.type": {
                    "$ref": "http://redfish.dmtf.org/schemas/v1/odata-v4.json#/definitions/type"
                },
                "Actions": {
                    "$ref": "#/definitions/Actions",
                    "description": "The available actions for LockService Resource.",
                    "longDescription": "This property shall contain the available actions for this resource."
                },
                "Description": {
                    "anyOf": [
                        {
                            "$ref": "http://redfish.dmtf.org/schemas/v1/Resource.json#/definitions/Description"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "readonly": true
                },
                "Id": {
                    "$ref": "http://redfish.dmtf.org/schemas/v1/Resource.json#/definitions/Id",
                    "readonly": true
                },
                "Name": {
                    "$ref": "http://redfish.dmtf.org/schemas/v1/Resource.json#/definitions/Name",
                    "readonly": true
                },
                "Oem": {
                    "$ref": "http://redfish.dmtf.org/schemas/v1/Resource.json#/definitions/Oem",
                    "description": "The OEM extension property.",
                    "longDescription": "This property shall contain the OEM extensions.  All values for properties that this object contains shall conform to the Redfish Specification-described requirements."
                }
            },
            "required": [
                "@odata.id",
                "@odata.type",
                "Id",
                "Name"
            ],
            "type": "object"
        },
        "OemActions": {
            "additionalProperties": true,
            "description": "The available OEM-specific actions for this resource.",
            "longDescription": "This type shall contain the available OEM-specific actions for this resource.",
            "patternProperties": {
                "^([a-zA-Z_][a-zA-Z0-9_]*)?@(odata|Redfish|Message)\\.[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "description": "This property shall specify a valid odata or Redfish property.",
                    "type": [
                        "array",
                        "boolean",
                        "integer",
                        "number",
                        "null",
                        "object",
                        "string"
                    ]
                }
            },
            "properties": {},
            "type": "object"
        },
        "ReleaseLock": {
            "additionalProperties": false,
            "description": "This action releases a management console lock.",
            "longDescription": "This action shall release a single/multiple management console locks(s)",
            "parameters": {
                "TransactionIDs": {
                    "description": "The parameter shall conatin the list of Transaction ID's.",
                    "items": {
                        "type": "integer"
                    },
                    "longDescription": "This parameter shall contain the list of Transaction ID's",
                    "maximum": 4294967295,
                    "minimum": 0,
                    "type": "array"
                },
                "Type": {
                    "description": "The type of reset.",
                    "longDescription": "This parameter shall contain the type of locks to be released. The Type can either be Transaction or Session",
                    "pattern": "^(Transaction|Session)",
                    "type": "string"
                }
            },
            "patternProperties": {
                "^([a-zA-Z_][a-zA-Z0-9_]*)?@(odata|Redfish|Message)\\.[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "description": "This property shall specify a valid odata or Redfish property.",
                    "type": [
                        "array",
                        "boolean",
                        "integer",
                        "number",
                        "null",
                        "object",
                        "string"
                    ]
                }
            },
            "properties": {
                "target": {
                    "description": "Link to invoke action",
                    "format": "uri-reference",
                    "type": "string"
                },
                "title": {
                    "description": "Friendly action name",
                    "type": "string"
                }
            },
            "type": "object"
        }
    },
    "owningEntity": "IBM",
    "release": "1.0",
    "title": "#LockService.v1_0_0.LockService"
}