#!groovy
stage 'Debug Build'
sh '''rm -rf build_debug
  mkdir build_debug
  cd build_debug
  cmake .. -DCMAKE_BUILD_TYPE="Debug"
  cmake --build .'''

//stage 'Debug Test'
//sh '''cd build_debug
//      ctest -V --output-on-failure'''

stage 'Release Build'
sh '''rm -rf build_release
  mkdir build_release
  cd build_release
  cmake .. -DCMAKE_BUILD_TYPE="Release"
  cmake --build .'''

//stage 'Release Test'
//sh '''cd build_release
//  ctest -V --output-on-failure'''

