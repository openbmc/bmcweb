[Unit]
Description=Start bmcwebd server

Wants=network.target
After=network.target

[Service]
ExecReload=kill -s HUP $MAINPID
ExecStart=@MESON_INSTALL_PREFIX@/libexec/bmcwebd
Type=simple
WorkingDirectory=@BMCWEB_WORKING_DIR@
User=@BMCWEB_USER@
Group=@BMCWEB_GROUP@
DynamicUser=@BMCWEB_DYNAMICUSER@
StateDirectory=bmcweb

# bmcweb currently uses /tmp as a mechanism to share files.
PrivateTmp=no

[Install]
WantedBy=network.target
